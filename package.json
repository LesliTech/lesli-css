{
    "name": "lesli-css",
    "description": "SCSS Utilities for websites, apps and web applications",
    "homepage": "https://lesli.tech",
    "author": "LesliTech <hello@lesli.tech>",
    "license": "GPLv3",
    "version": "3.0.0",
    "keywords": [
        "css",
        "scss",
        "sass"
    ],
    "files":[
        "sass",
        "_index.scss",
        "lesli.txt",
        "license",
        "readme"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LesliTech/lesli-css.git"
    },
    "bugs": {
        "url": "https://github.com/LesliTech/lesli-css/issues"
    },
    "exports": {
        ".": "./lesli.scss",
        "./bulma": "./sass/vendor/bulma.scss"
    },
    "dependencies": {
        "sass": "1.83.0",
        "bulma": "1.0.3"
    },
    "devDependencies": {
        "glob": "11.0.0",
        "vitest": "2.1.8",
        "sass-true": "8.1.0",
        "@vitest/coverage-v8":"2.1.8"
    },
    "scripts": {
        "test": "vitest run",
        "test2": "sass ./lesli.scss",
        "test:report": "vitest run --reporter=verbose",
        "test:coverage": "vitest run --coverage"
    }
}
